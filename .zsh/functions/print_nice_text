print_nice_text() {
    local bgc=0
    local fgc=0
    local f_inc=0
    local b_inc=0
    local fgc=$[${RANDOM}%31+100]
    local f_inc=$[${RANDOM}%3+1]
    local text
    text=('2' '5' '6' ' ' 'C' 'o' 'l' 'o' 'r' 's' '!' ' ' 'd:-)')
    for ((i=1; i<=${#text}; i++))
    do
        print -n "\x1b[48;5;${bgc}m\x1b[38;5;${fgc}m ${text[$i]}\x1b[0m";
        ((bgc-=$b_inc))
        ((fgc+=$f_inc))
    done
    print
}

